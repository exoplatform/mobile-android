<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/authenticate_server_cell_bg_normal"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/authenticate_server_listview_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="3dp" >

        <TextView
            android:id="@+id/TextView_ServerName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/TextView_URL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView_Checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/authenticate_checkmark_off"
        android:contentDescription="@drawable/serversectionseparator" />

</LinearLayout>