<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/warning_dialog_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="280dp"
              android:orientation="vertical"
              android:background="#FFFFFFFF">

    <!-- Title -->
    <TextView
            android:id="@+id/warning_dialog_title_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#000000"
            android:layout_gravity="center"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/Warning"/>

    <!-- Message text -->
    <TextView
            android:id="@+id/warning_dialog_message_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingBottom="3dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="3dip"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/Warning"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_warning_gray" />

    <!-- Ok button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D6D9DE"
        android:padding="5dp" >

        <Button
            android:id="@+id/warning_dialog_btn"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/cancel_button_background_shape"
            android:shadowColor="#000000"
            android:shadowDx="1.0"
            android:shadowDy="2.0"
            android:shadowRadius="1.0"
            android:text="@string/OK"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>