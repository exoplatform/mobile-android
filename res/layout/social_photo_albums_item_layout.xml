<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:background="#FFFFFF"
	android:padding="2dp" android:gravity="center_vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<ImageView android:id="@+id/albums_image"
		android:layout_width="50dp" android:layout_height="50dp" />
	<TextView android:id="@+id/albums_name" android:text="All photos"
		android:textStyle="bold" android:textColor="#000000" android:padding="5dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:id="@+id/albums_number" android:text="(5)"
		android:textStyle="bold" android:textColor="#000000" android:padding="5dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>
