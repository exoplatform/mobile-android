<resources>

    <style name="Theme.eXo" parent="@style/Theme.GreenDroid.NoTitleBar">
        <item name="gdActionBarTitleColor">#ffffffff</item>
        <item name="gdActionBarBackground">@drawable/action_bar_background</item>
        <item name="gdActionBarItemBackground">@drawable/action_bar_item_background</item>
        <item name="gdActionBarDividerDrawable">@drawable/action_bar_separator_complete</item>
        <item name="gdActionBarDividerWidth">2dp</item>
        <item name="gdActionBarApplicationDrawable">@drawable/exo_application_logo</item>
        <item name="gdActionBarHomeDrawable">@drawable/action_bar_icon_home</item>
        <item name="gdActionBarTitleStyle">@style/TitleTextAppearance</item>
    </style>

    <style name="Theme.eXo_signout" parent="@style/Theme.eXo">
        <item name="gdActionBarBackground">@color/action_bar_tint</item>
        <item name="gdActionBarHomeDrawable">@drawable/action_bar_logout_button</item>
    </style>

    <style name="Theme.PageIndicatorDefaults" parent="@style/Theme.eXo">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">

        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColor">#787878</item>
    </style>

</resources>