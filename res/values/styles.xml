<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="background_color">
        <item name="android:background">#dcdcdc</item>
    </style>
    
    <style name="ActionBarTitleStyle" parent="@style/TextAppearanceLarge">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_name">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#115ead</item>
    </style>

    <style name="textview_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textColorLink">#155EAD</item>
    </style>

    <style name="textview_time">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#696969</item>
    </style>

    <style name="textview_number">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minHeight">@dimen/social_buttons_min_height</item>
    </style>

    <style name="textview_like">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="textview_header">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#155EAD</item>
    </style>

    <style name="textview_home">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textview_activity_name_home">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textview_activity_title_home">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="HomeButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:background">@null</item>
    </style>

    <style name="HomeButtonStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Welcome: slogan text -->
    <style name="WelcomeSloganTxtStyle">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="ShadowTxtStyle">
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1.5</item>
    </style>


    <!-- Signup:  edit text with background drawable -->
    <style name="SignUpEditTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center|left</item> <!-- center text vertically and left -->
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColorHint">#B3B3B3</item>
        <item name="android:paddingLeft">60dp</item> <!-- push text behind the icon -->
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Signup:  heading text -->
    <style name="SignUpHeadingTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <!-- android:gravity - change gravity depending on alignment of text -->
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#5A5A5A</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/separator_light</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- Signup:  blue button -->
    <style name="SignUpBlueBtnStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Signup: alert text -->
    <style name="SignUpAlertTxtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawableLeft">@drawable/icon_warning</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- Signup: blue header -->
    <style name="SignUpBlueHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/action_bar_background_repeate</item>
    </style>

    <!-- Server setting: table style -->
    <style name="ServerSettingTableStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ServerSettingTableFirstRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ServerSettingTableRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ServerSettingTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/label_txt_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ServerSettingEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/label_txt_size</item>
        <item name="android:textColorHint">#999999</item>
    </style>

    <!-- Settings -->
    <style name="ServerSettingTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/title_txt_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Account Switcher styles  -->
    <style name="AccountFragmentTitleStyle">
		<item name="android:background">@drawable/action_bar_background_repeate</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
	</style>
    
    <style name="AccountListItemHeaderStyle">
        <item name="android:background">@color/AccountListItemHeaderColor</item>
    </style>
    <style name="AccountListItemHeaderNameStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/AccountListItemTextBigSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AccountListItemHeaderServerStyle">
        <item name="android:textColor">#2f5e92</item>
        <item name="android:textSize">@dimen/AccountListItemTextSmallSize</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AccountListItemBodyStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="AccountListItemBodyFullnameStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/AccountListItemTextSmallSize</item>
    </style>
    
    <style name="AccountListItemBodyUsernameStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/AccountListItemTextSmallSize</item>
    </style>
    
    <style name="AccountListItemBodyConnectionStatusStyle">
        <item name="android:textColor">#999999</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/AccountListItemTextSmallSize</item>
    </style>
    
    <style name="AccountSwitcherSignInButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/action_bar_item_background</item>
        <item name="android:textColor">@color/text_selector</item>
        <item name="android:textSize">@dimen/AccountListItemTextSmallSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Animations  -->
    <style name="Animations" />
    <style name="Animations.Window">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
    </style>

</resources>