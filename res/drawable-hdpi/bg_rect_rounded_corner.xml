<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- darkest -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff2C2C2C" />
            <corners android:radius="6dp" />
            <padding android:bottom="3dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f02C2C2C" />
            <corners android:radius="6dp" />
            <padding android:bottom="3dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#602C2C2C" />
            <corners android:radius="6dp" />
            <padding android:bottom="3dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#102C2C2C" />
            <corners android:radius="6dp" />
            <padding android:bottom="3dp" />
        </shape>
    </item>

    <!-- Rounded rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0"/>
            <padding android:left="7.5dp" android:top="7.5dp"
                     android:right="7.5dp" android:bottom="7.5dp" />
            <corners android:radius="6dp"/>
        </shape>
    </item>

</layer-list>